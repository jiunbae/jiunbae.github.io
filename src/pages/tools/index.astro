---
import Layout from '@/layouts/Layout.astro';
import toolItems from '@/data/tools';
---

<Layout title="Tools" description="Browser-based utilities by Jiun Bae — image, audio, and video converters">
  <div class="page">
    <div class="header">
      <h1 class="title">Tools</h1>
      <p class="subtitle">Handy browser-based utilities — no uploads, everything runs locally</p>
    </div>

    {toolItems.length === 0 ? (
      <div class="empty">Coming soon...</div>
    ) : (
      <div class="grid">
        {toolItems.map(item => (
          <a href={item.slug} class="card">
            <div class="icon-area">
              <span class="icon">{item.icon}</span>
            </div>
            <div class="card-body">
              <h2 class="card-title">{item.title}</h2>
              <p class="card-description">{item.description}</p>
              <div class="tags">
                {item.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </a>
        ))}
      </div>
    )}
  </div>
</Layout>

<style lang="scss">
  .page {
    max-width: 1100px;
    margin: 0 auto;
    padding: 2rem;
  }

  .header {
    margin-bottom: 2.5rem;
  }

  .title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--gray-1);
  }

  .subtitle {
    font-size: 1rem;
    color: var(--gray-5);
    line-height: 1.6;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .card {
    display: block;
    border-radius: 12px;
    overflow: hidden;
    background: var(--article-background);
    border: 1px solid var(--gray-6);
    text-decoration: none;
    color: var(--gray-1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;

    &:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
      color: var(--gray-1);
    }
  }

  .icon-area {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 140px;
    background: var(--gray-6);
    font-size: 3.5rem;
    user-select: none;
  }

  .icon {
    line-height: 1;
  }

  .card-body {
    padding: 1.25rem;
  }

  .card-title {
    font-size: 1.15rem;
    font-weight: 600;
    margin-bottom: 0.4rem;
    color: var(--gray-1);
  }

  .card-description {
    font-size: 0.875rem;
    color: var(--gray-5);
    line-height: 1.5;
    margin-bottom: 0.75rem;
  }

  .tags {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.7rem;
    padding: 2px 8px;
    border-radius: 4px;
    background: var(--gray-6);
    color: var(--gray-2);
  }

  .empty {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--gray-5);
    font-size: 1rem;
  }

  @media (max-width: 640px) {
    .page {
      padding: 1.25rem;
    }

    .grid {
      grid-template-columns: 1fr;
    }

    .title {
      font-size: 1.6rem;
    }
  }
</style>
