---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import { format } from 'date-fns';

const allPosts = await getCollection('posts', ({ data }) => data.published !== false);
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Get unique tags with counts
const tagCounts = sortedPosts.reduce((acc, post) => {
  post.data.tags.forEach(tag => {
    acc[tag] = (acc[tag] || 0) + 1;
  });
  return acc;
}, {} as Record<string, number>);

const tags = Object.entries(tagCounts).sort((a, b) => b[1] - a[1]);
const totalCount = sortedPosts.length;
---

<Layout
  title="Posts | Jiunbae"
  description="기술 블로그 포스트 목록"
>
  <main class="main">
    <section class="wrapper">
      <div class="tag-list" id="tags-container">
        <button class="tag-button active" data-tag="all">
          all ({totalCount})
        </button>
        {tags.map(([tag, count]) => (
          <button class="tag-button" data-tag={tag}>
            {tag} ({count})
          </button>
        ))}
      </div>

      <ul class="post-list" id="posts-list">
        {sortedPosts.map((post) => (
          <li class="post-item" data-tags={JSON.stringify(post.data.tags)}>
            <a href={`/posts${post.data.permalink}`} class="post-link">
              <article class="post">
                <div class="post-content">
                  <div class="post-header">
                    <time class="post-date" datetime={post.data.date.toISOString()}>
                      {format(post.data.date, 'yy.MM.dd')}
                    </time>
                  </div>
                  <h2 class="post-title">{post.data.title}</h2>
                  {post.data.description && (
                    <p class="post-description">{post.data.description}</p>
                  )}
                  {post.data.tags.length > 0 && (
                    <div class="post-tags">
                      {post.data.tags.map(tag => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  )}
                </div>
                {post.data.heroImage && (
                  <div class="post-thumbnail">
                    <img src={post.data.heroImage} alt={post.data.heroImageAlt || post.data.title} loading="lazy" />
                  </div>
                )}
              </article>
            </a>
          </li>
        ))}
      </ul>
    </section>
  </main>
</Layout>

<script>
  const tagsContainer = document.getElementById('tags-container');
  const postsList = document.getElementById('posts-list');

  tagsContainer?.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (target.classList.contains('tag-button')) {
      const selectedTag = target.dataset.tag;

      // Update active tag
      tagsContainer.querySelectorAll('.tag-button').forEach(tag => tag.classList.remove('active'));
      target.classList.add('active');

      // Filter posts
      postsList?.querySelectorAll('.post-item').forEach((item) => {
        const postTags = JSON.parse((item as HTMLElement).dataset.tags || '[]');
        if (selectedTag === 'all' || postTags.includes(selectedTag)) {
          (item as HTMLElement).style.display = '';
        } else {
          (item as HTMLElement).style.display = 'none';
        }
      });
    }
  });

  // Handle URL tag parameter
  const urlParams = new URLSearchParams(window.location.search);
  const tagParam = urlParams.get('tag');
  if (tagParam) {
    const tagButton = tagsContainer?.querySelector(`[data-tag="${tagParam}"]`) as HTMLElement;
    tagButton?.click();
  }
</script>

<style lang="scss">
