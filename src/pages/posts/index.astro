    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-button {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    background: transparent;
    border: 1px solid var(--gray-5);
    border-radius: 2rem;
    font-size: 0.875rem;
    color: var(--gray-3);
    cursor: pointer;
    transition: all 0.2s;

    &:hover {
      border-color: var(--primary-c1);
      color: var(--primary-c1);
    }

    &.active {
      background: var(--primary-c1);
      border-color: var(--primary-c1);
      color: white;
    }
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-item {
    border-bottom: 1px solid var(--gray-5);
    padding-bottom: 1rem;

    &:last-child {
      border-bottom: none;
    }
  }

  .post-link {
    text-decoration: none;
    display: block;
  }

  .post {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .post-content {
    flex: 1;
    min-width: 0;
  }

  .post-header {
    margin-bottom: 0.5rem;
  }

  .post-date {
    font-size: 0.8125rem;
    color: var(--gray-4);
  }

  .post-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--gray-1);
    margin: 0 0 0.5rem;
    line-height: 1.4;

    .post-link:hover & {
      color: var(--primary-c1);
    }
  }

  .post-description {
    font-size: 0.9375rem;
    color: var(--gray-3);
    margin: 0 0 0.75rem;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.625rem;
    background: var(--article-background);
    border-radius: 1rem;
    color: var(--gray-4);
  }

  .post-thumbnail {
    flex-shrink: 0;
    width: 140px;
    height: 90px;
    border-radius: 0.5rem;
    overflow: hidden;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  @media (max-width: 640px) {
    .post {
      flex-direction: column-reverse;
      gap: 1rem;
    }

    .post-thumbnail {
      width: 100%;
      height: 160px;
    }

    .post-title {
      font-size: 1rem;
    }
  }
</style>
