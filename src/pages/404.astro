---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <div class="container">
    <h1 class="error-code">404</h1>
    <p class="error-message">페이지를 찾을 수 없습니다</p>
    <a href="/" class="home-link">홈으로 돌아가기</a>
  </div>
</Layout>

<style lang="scss">
  .container {
    max-width: 780px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
    text-align: center;
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .error-code {
    font-size: 6rem;
    font-weight: 700;
    color: var(--gray-5);
    margin: 0;
    line-height: 1;
  }

  .error-message {
    font-size: 1.25rem;
    color: var(--gray-3);
    margin: 1rem 0 2rem;
  }

  .home-link {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--primary-c1);
    color: white;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 500;
    transition: background-color 0.2s;

    &:hover {
      background: var(--primary-c2);
    }
  }
</style>
