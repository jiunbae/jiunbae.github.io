---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import { format } from 'date-fns';

const allPosts = await getCollection('posts', ({ data }) => data.published !== false);
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Get unique tags with counts
const tagCounts = sortedPosts.reduce((acc, post) => {
  post.data.tags.forEach(tag => {
    acc[tag] = (acc[tag] || 0) + 1;
  });
  return acc;
}, {} as Record<string, number>);

const tags = Object.entries(tagCounts).sort((a, b) => b[1] - a[1]);
const visibleTags = tags.slice(0, 10); // Show only top 10 tags
const hasMoreTags = tags.length > 10;
const totalCount = sortedPosts.length;
---

<Layout
  title="Jiunbae's Blog"
  description="AI/ML 연구원의 기술 블로그"
>
  <main class="main">
    <section class="wrapper">
      <div class="tag-list" id="tag-list">
        <button class="tag-button active" data-tag="all">
          all ({totalCount})
        </button>
        {visibleTags.map(([tag, count]) => (
          <button class="tag-button" data-tag={tag}>
            {tag} ({count})
          </button>
        ))}
        {hasMoreTags && (
          <button class="tag-button more-tags" id="show-more-tags">
            +{tags.length - 10} more
          </button>
        )}
        <div class="hidden-tags" id="hidden-tags" style="display: none;">
          {tags.slice(10).map(([tag, count]) => (
            <button class="tag-button" data-tag={tag}>
              {tag} ({count})
            </button>
          ))}
        </div>
      </div>

      <ul class="post-list" id="post-list">
        {sortedPosts.map((post) => (
          <li class="post-item" data-tags={JSON.stringify(post.data.tags)}>
            <a href={`/posts${post.data.permalink}`} class="post-link">
              <article class="post">
                <div class="post-content">
                  <div class="post-header">
                    <time class="post-date" datetime={post.data.date.toISOString()}>
                      {format(post.data.date, 'yy.MM.dd')}
                    </time>
                  </div>
                  <h2 class="post-title">{post.data.title}</h2>
                  {post.data.description && (
                    <p class="post-description">{post.data.description}</p>
                  )}
                  {post.data.tags.length > 0 && (
                    <div class="post-tags">
                      {post.data.tags.map(tag => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  )}
                </div>
                {post.data.heroImage && (
                  <div class="post-thumbnail">
                    <img src={post.data.heroImage} alt={post.data.heroImageAlt || post.data.title} loading="lazy" />
                  </div>
                )}
              </article>
            </a>
          </li>
        ))}
      </ul>
    </section>
  </main>
</Layout>

<script>
  const tagList = document.getElementById('tag-list');
  const postList = document.getElementById('post-list');
  const showMoreBtn = document.getElementById('show-more-tags');
  const hiddenTags = document.getElementById('hidden-tags');

  // Show more tags functionality
  showMoreBtn?.addEventListener('click', () => {
    if (hiddenTags) {
      hiddenTags.style.display = 'contents';
      showMoreBtn.style.display = 'none';
    }
  });

  // Tag filtering
  tagList?.addEventListener('click', (e) => {
    const button = (e.target as HTMLElement).closest('.tag-button');
    if (!button || button.id === 'show-more-tags') return;

    const selectedTag = (button as HTMLElement).dataset.tag;
    if (!selectedTag) return;

    // Update active state
    tagList.querySelectorAll('.tag-button').forEach(btn => btn.classList.remove('active'));
    button.classList.add('active');

    // Filter posts
    postList?.querySelectorAll('.post-item').forEach((item) => {
      const postTags = JSON.parse((item as HTMLElement).dataset.tags || '[]');
      if (selectedTag === 'all' || postTags.includes(selectedTag)) {
        (item as HTMLElement).style.display = '';
      } else {
        (item as HTMLElement).style.display = 'none';
      }
    });
  });
</script>

<style lang="scss">
  .main {
    max-width: 900px;
    margin: 0 auto;
    padding: 1.5rem;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-button {
    display: inline-flex;
    align-items: center;
    padding: 0.375rem 0.75rem;
    background: var(--article-background);
    border: none;
    border-radius: 0.25rem;
    font-size: 0.8125rem;
    color: var(--gray-3);
    cursor: pointer;
    transition: all 0.2s;

    &:hover {
      background: var(--primary-c1);
      color: white;
    }

    &.active {
      background: var(--primary-c1);
      color: white;
    }

    &.more-tags {
      background: transparent;
      border: 1px dashed var(--gray-5);
      color: var(--gray-4);

      &:hover {
        border-color: var(--primary-c1);
        color: var(--primary-c1);
        background: transparent;
      }
    }
  }

  .hidden-tags {
    display: contents;
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-item {
    border-bottom: 1px solid var(--gray-5);
    padding-bottom: 1rem;

    &:last-child {
      border-bottom: none;
    }
  }

  .post-link {
    text-decoration: none;
    display: block;
  }

  .post {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .post-content {
    flex: 1;
    min-width: 0;
  }

  .post-header {
    margin-bottom: 0.5rem;
  }

  .post-date {
    font-size: 0.8125rem;
    color: var(--gray-4);
  }

  .post-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--gray-1);
    margin: 0 0 0.5rem;
    line-height: 1.4;

    .post-link:hover & {
      color: var(--primary-c1);
    }
  }

  .post-description {
    font-size: 0.9375rem;
    color: var(--gray-3);
    margin: 0 0 0.75rem;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    background: var(--article-background);
    border-radius: 0.25rem;
    color: var(--gray-4);
  }

  .post-thumbnail {
    flex-shrink: 0;
    width: 140px;
    height: 90px;
    border-radius: 0.5rem;
    overflow: hidden;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  @media (max-width: 640px) {
    .post {
      flex-direction: column-reverse;
      gap: 1rem;
    }

    .post-thumbnail {
      width: 100%;
      height: 160px;
    }

    .post-title {
      font-size: 1rem;
    }
  }
</style>
